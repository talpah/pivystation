#:import SimpleTableLayout libs.garden.simpletablelayout.SimpleTableLayout
#:import LabelB libs.widgets.LabelB
<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        SimpleTableLayout:
            rows: 1
            cols: 3
            WeatherWidget:
            RadioWidget:
            BoxLayout:
                orientation: 'vertical'
                ClockWidget:
                TimerWidget:
        ForecastWidget:
        NewsWidget:

<VideoScreen>:
    Video:
        id: myvideo
        source: root.vsource
        allow_stretch: True

<SaverScreen>:
    saver: saver_widget
    SaverWidget:
        id: saver_widget

<SaverWidget>:
    flying: flying_widget
    FlyingWidget:
        id: flying_widget
        center: root.center

<FlyingWidget>:
    pos: self.pos
    size: 600, 500
    orientation: 'vertical'
    WeatherLiteWidget:
    ClockWidget:
    TimerWidget:

<RadioWidget>:
    orientation: 'vertical'
    BoxLayout:
        Label:
            id: 'radiolabel'
            text: root.radio_label
            font_size: '48sp'
            color: 1.000, 1.000, 1.000, 1
            markup: True
            text_size: self.size
    BoxLayout:
        size_hint: 1, 0
        Label:
            size_hint: 1, 0
            font_size: '36sp'
            text: root.play_status
            text_size: self.size
            halign: 'left'
            valign: 'middle'
        Label:
            size_hint: 1, 0
            font_size: '36sp'
            text: root.volume_value
            text_size: self.size
            halign: 'right'
            valign: 'middle'

<WeatherLiteWidget>:
    size_hint: 1, .2
    size: 600, 30
    Label:
        size_hint: 0,0
        size: 600, 30
        id: 'shortstatus'
        text: root.shortstatus
        font_size: '36sp'
        halign: 'center'
        valign: 'bottom'
        color: 1.000, 0.980, 0.804, 1

<ForecastWidget>:
    size_hint: 1,0
    size: 1, 50
    Label:
        text: 'Azi:'
        font_size: '40sp'
        color: 1.000, 0.580, 0.580, 1
    Image:
        source: root.today_weathericon_source
        allow_stretch: True
        size_hint: 1, 1.2
        pos_hint: {'center_y': 0.5}
    Label:
        text: root.today_temperature_max_label
        font_size: '32sp'
        color: 1.000, 0.980, 0.804, 1
    Label:
        text: root.today_conditions_label
        font_size: '32sp'
        color: 1.000, 0.980, 0.804, 1
    Label:
        text: 'MÃ¢ine:'
        font_size: '40sp'
        color: 1.000, 0.580, 0.580, 1
    Image:
        source: root.tomorrow_weathericon_source
        allow_stretch: True
        size_hint: 1, 1.2
        pos_hint: {'center_y': 0.5}
    Label:
        text: root.tomorrow_temperature_max_label
        font_size: '32sp'
        color: 1.000, 0.980, 0.804, 1
    Label:
        text: root.tomorrow_conditions_label
        font_size: '32sp'
        color: 1.000, 0.980, 0.804, 1


<WeatherWidget>:
    orientation: 'vertical'
    Label:
        id: 'locationlabel'
        text: root.location_label
        font_size: '48sp'
        color: 1.000, 0.980, 0.804, 1
        valign: 'top'
    BoxLayout:
        Image:
            source: root.weathericon_source
            allow_stretch: True
            size_hint: 1, 1.8
            pos_hint: {'center_y': 0.5}
        BoxLayout:
            orientation: 'vertical'
            Label:
                id: 'temperaturelabel'
                text: root.temperature_label
                font_size: '96sp'
                color: 1.000, 0.980, 0.804, 1
            Label:
                id: 'temperatureminmaxlabel'
                text: root.temperatureminmax_label
                font_size: '36sp'
                color: 0.8, 0.8, 0.8, 1
    Label:
        id: 'weatherupdatedlabel'
        text: root.weatherupdated_label
        font_size: '32sp'
        color: 0.5, 0.5, 0.5, 1
        valign: 'top'

<TimerWidget>:
    id: 'timertext'
    text: root.timer_text
    font_size: '120sp'
    color: root.timer_color
    bcolor: root.timer_bgcolor
    valign: 'top'

<NewsWidget>:
    colspan: 3
    text_size: self.size
    halign: 'left'
    valign: 'top'
    markup: True
    text: root.news_items
    font_size: '40sp'

<ClockWidget>:
    size: 500, 160
    Label:
        size: 500, 30
        id: 'datetext'
        text: root.date_text
        font_size: '48sp'
        color: 1.000, 0.980, 0.804, 1
        valign: 'top'
    Label:
        id: 'clocktext'
        text: root.clock_text
        font_size: '120sp'
        color: 1.000, 0.980, 0.804, 1
        valign: 'top'
