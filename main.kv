#:import SimpleTableLayout libs.garden.simpletablelayout.SimpleTableLayout
#:import LabelB libs.widgets.LabelB
<MainScreen>:
    SimpleTableLayout:
        rows: 2
        cols: 3
        WeatherWidget:
        RadioWidget:
        BoxLayout:
            orientation: 'vertical'
            ClockWidget:
            TimerWidget:
        NewsWidget:

<MorningScreen>:
    SimpleTableLayout:
        rows: 2
        cols: 3
        WeatherWidget:
        RadioWidget:
        BoxLayout:
            orientation: 'vertical'
            ClockWidget:
            TimerWidget:
        ForecastWidget:
            colspan: 3

<SaverScreen>:
    saver: saver_widget
    SaverWidget:
        id: saver_widget

<SaverWidget>:
    flying: flying_widget
    FlyingWidget:
        id: flying_widget
        center: root.center

<FlyingWidget>:
    pos: self.pos
    size: 600, 500
    orientation: 'vertical'
    WeatherLiteWidget:
    ClockWidget:
    TimerWidget:

<RadioWidget>:
    orientation: 'vertical'
    Label:
        id: 'radiolabel'
        text: root.radio_label
        font_size: '48sp'
        color: 1.000, 0.412, 0.706, 1
        text_size: root.width, None
        size: self.texture_size
        valign: 'top'
    BoxLayout:
        Label:
            font_size: '36sp'
            text: root.play_status
            text_size: self.size
            halign: 'left'
            valign: 'middle'
        Label:
            font_size: '36sp'
            text: root.volume_value
            text_size: self.size
            halign: 'right'
            valign: 'middle'

<WeatherLiteWidget>:
    size_hint: 1, .2
    size: 600, 30
    Label:
        size_hint: 0,0
        size: 600, 30
        id: 'shortstatus'
        text: root.shortstatus
        font_size: '36sp'
        halign: 'center'
        valign: 'bottom'
        color: 1.000, 0.980, 0.804, 1

<ForecastWidget>:
    Image:
        source: root.weathericon_source
        allow_stretch: True
        size_hint: 0.5, 1
        pos_hint: {'center_y': 0.5}
        size: 300, 300
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: 'locationlabel'
            text: root.location_label
            font_size: '48sp'
            color: 1.000, 0.980, 0.804, 1
        BoxLayout:
            Label:
                text: 'Maximă:'
                font_size: '48sp'
                color: 1.000, 0.980, 0.804, 1
            Label:
                id: 'temperature_max_label'
                text: root.temperature_max_label
                font_size: '48sp'
                color: 1.000, 0.980, 0.804, 1
        BoxLayout:
            Label:
                text: 'Minimă:'
                font_size: '48sp'
                color: 1.000, 0.980, 0.804, 1
            Label:
                id: 'temperature_min_label'
                text: root.temperature_min_label
                font_size: '48sp'
                color: 1.000, 0.980, 0.804, 1

<WeatherWidget>:
    orientation: 'vertical'
    Label:
        id: 'locationlabel'
        text: root.location_label
        font_size: '48sp'
        color: 1.000, 0.980, 0.804, 1
        valign: 'top'
    BoxLayout:
        Image:
            source: root.weathericon_source
            allow_stretch: True
            size_hint: 1, 1.8
            pos_hint: {'center_y': 0.5}
        BoxLayout:
            orientation: 'vertical'
            Label:
                id: 'temperaturelabel'
                text: root.temperature_label
                font_size: '96sp'
                color: 1.000, 0.980, 0.804, 1
            Label:
                id: 'temperatureminmaxlabel'
                text: root.temperatureminmax_label
                font_size: '36sp'
                color: 0.8, 0.8, 0.8, 1
    Label:
        id: 'weatherupdatedlabel'
        text: root.weatherupdated_label
        font_size: '32sp'
        color: 0.5, 0.5, 0.5, 1
        valign: 'top'

<TimerWidget>:
    id: 'timertext'
    text: root.timer_text
    font_size: '120sp'
    color: root.timer_color
    bcolor: root.timer_bgcolor
    valign: 'top'

<NewsWidget>:
    colspan: 3
    text_size: self.size
    halign: 'left'
    valign: 'top'
    markup: True
    text: root.news_items
    font_size: '40sp'

<ClockWidget>:
    size: 500, 160
    Label:
        size: 500, 30
        id: 'datetext'
        text: root.date_text
        font_size: '48sp'
        color: 1.000, 0.980, 0.804, 1
        valign: 'top'
    Label:
        id: 'clocktext'
        text: root.clock_text
        font_size: '120sp'
        color: 1.000, 0.980, 0.804, 1
        valign: 'top'
